<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3> Exámenes </h3>
      </div>              
    </div>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_content">
            <%=form_for [:admins , @exam],:html => {class: "form-horizontal form-label-left",novalidate: "novalidate"}  do |f|%>

            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Escuela 
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.collection_select :school_id, School.order(:name,:id), :id, :name, {prompt: "Select a School"}, {class: "form-control",disabled: true}%>
              </div>
            </div>

            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Clave Materia 
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.collection_select :subject_id, Subject.order(:name,:id), :id, :name, {prompt: "Select a Subject"}, {class: "form-control",disabled: true}%>
              </div>
            </div>

            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Grupo 
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.collection_select :group_id, Group.order(:Group_ID,:id), :id, :Group_ID, {prompt: "Select a Group"}, {class: "form-control",disabled: true}%>
              </div>
            </div>

            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="exam_name">Título Exámen</label>
              <div class="col-md-6 col-sm-6 col-xs-12">                         
                <%=f.text_field :exam_name, class: "form-control col-md-7 col-xs-12",readonly: true%>
              </div>
            </div>
            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="exam_date">Fecha</label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%=f.text_field :exam_date, class: "form-control col-md-7 col-xs-12",readonly: true%>                        

              </div>
            </div>

            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="start_time">Hora 
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">                         
                <%=f.text_field :start_time, class: "form-control col-md-7 col-xs-12",readonly: true%>
              </div>
            </div>
            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="end_time">end_time 
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%=f.text_field :end_time, class: "form-control col-md-7 col-xs-12",readonly: true%>                        

              </div>
            </div>

            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="description">Descripción</label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%=f.text_field :description, class: "form-control col-md-7 col-xs-12",readonly: true%>                        

              </div>
            </div>

            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="classroom">Salón <span class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%=f.text_area :classroom, class: "form-control col-md-7 col-xs-12",readonly:true%>                        

              </div>
            </div>

            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="notes">Notes 
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%=f.text_area :notes, class: "form-control col-md-7 col-xs-12",readonly: true%>                        

              </div>
            </div>

            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="notes">Added By <span class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">                         
                <%=f.text_field :added_by, class: "form-control col-md-7 col-xs-12",readonly: true%>
              </div>
            </div>

            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="admin_id">Userio <span class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
              <%if @exam.admin.present?%>
                <%=f.text_field :admin_id, class: "form-control col-md-7 col-xs-12",value: @exam.admin.try(:email) ,readonly: true%>
                <%else%>
                <%=f.text_field :user_id, class: "form-control col-md-7 col-xs-12",value: @exam.user.try(:email) ,readonly: true%>
                <%end%>
              </div>
            </div>
            
 
            <div class="ln_solid"></div>
            <div class="form-group">
              <div class="col-md-6 col-md-offset-3">             
                <%=link_to "Editar",edit_admins_exam_path(@exam),class: "btn btn-primary"%>
                 <%=link_to "Cancelar",admins_exams_path,class: "btn btn-primary"%>
              </div>
            </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
