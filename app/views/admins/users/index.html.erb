<div class="right_col" role="main" style="min-height: 3744px;">
  <div class="">
    <div class="page-title">
      <div class="title_left">
      <h3><%=link_to "Estudiante nuevo",new_admins_user_path ,:class=>"btn btn-primary"%></h3>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12 __web-inspector-hide-shortcut__">
        <div class="x_panel">
          <div class="x_content">
            <div id="datatable-buttons_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
              <div class="dt-buttons btn-group">
                <a class="btn btn-default buttons-csv buttons-html5 btn-sm" tabindex="0" aria-controls="datatable-buttons" href="<%=import_admins_users_path%>">
                  <span>CSV</span>
                </a>
                <a class="btn btn-default buttons-excel buttons-flash btn-sm" tabindex="0" aria-controls="datatable-buttons" href="javascript:void(0)">
                  <span>Excel</span>                  
                  </a>
                </div>
                <div id="datatable-buttons_filter" class="dataTables_filter">
                </div>
                <table id="user_list" class="table table-striped table-bordered dataTable no-footer dtr-inline" role="grid" aria-describedby="datatable-buttons_info" >
                  <thead>
                    <tr role="row">
                     <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1"  aria-sort="ascending" aria-label="ID: activate to sort column descending">ID</th>
                     
                      <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1"  aria-label="School: activate to sort column ascending">Escuela</th> 
                     
                      <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1"  aria-label="First Name: activate to sort column ascending">Nombre</th>
                      <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1"  aria-label="Last Name: activate to sort column ascending">Apellidos</th>
                      <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1"  aria-label="Email: activate to sort column ascending">Correo Electrónico</th>
                      <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="Father Name: activate to sort column ascending">Nombre del Padre</th>
                      <th>Acción</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%@users.each do |user|%>
                    <tr role="row" class="odd">
                    <td tabindex="0" class="sorting_1"><%=user.id%></td>                      
                      <td><%=user.school.try(:name)%></td>
                      <td><%=user.first_name%></td>
                      <td><%=user.last_name%></td>
                      <td><%=user.email%></td>
                      <td ><%=user.father_name%></td>                     
                      <td>
                        <a class="btn btn-warning btn-xs" href="<%= admins_user_path(user) %>" > <i class="fa fa-eye" aria-hidden="true"></i>
                        </a>
                        <a class="btn btn-success btn-xs" href="<%=edit_admins_user_path(user)%>" ><i class="fa fa-fw fa-edit"></i></a>              
                        <%= link_to "<i class='fa fa-fw fa-close'></i>".html_safe , admins_user_path(user), method: :delete, data: { confirm: 'Esta Seguro?' }, class:'btn btn-danger btn-xs' %>
                      </td>
                    </tr>
                    <%end%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <td>

<script type="text/javascript">
  $('table').DataTable();
</script>