<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Calificaciones</h3>
      </div>              
    </div>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_content">
            <%=form_for [:admins , @exam_result],:html => {class: "form-horizontal form-label-left",novalidate: "novalidate"}  do |f|%>

            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="exam_id">Exámen <span class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.collection_select :exam_id, Exam.order(:exam_name,:id), :id, :exam_name, {prompt: "Select Exam"}, {class: "form-control",disabled:true}%>
              </div>
            </div>

            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Estudiante <span class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.collection_select :user_id, User.order(:first_name,:id), :id, :first_name, {prompt: "Select User"}, {class: "form-control",disabled:true}%>
              </div>
            </div>

            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="score">Calificación <span class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">                         
                <%=f.text_field :score,required: "required", class: "form-control col-md-7 col-xs-12",readonly:true%>
              </div>
            </div>
            <div class="item form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="absent">Faltas<span class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%=f.text_field :abasent,required: "required", class: "form-control col-md-7 col-xs-12",readonly:true%>                        

              </div>
            </div>                       
 
            <div class="ln_solid"></div>
            <div class="form-group">
              <div class="col-md-6 col-md-offset-3">
                <%=link_to "Editar",edit_admins_exam_result_path(@exam_result),class: "btn btn-primary"%>
                 <%=link_to "Cancelar",admins_exam_results_path,class: "btn btn-primary"%>
              </div>
            </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
